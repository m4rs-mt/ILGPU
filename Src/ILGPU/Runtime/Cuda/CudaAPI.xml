<?xml version="1.0" encoding="utf-8" ?>
<Imports Namespace="ILGPU.Runtime.Cuda"
         ClassName="CudaAPI"
         DefaultReturnType="CudaError"
         NotSupportedException="RuntimeErrorMessages.CudaNotSupported">
