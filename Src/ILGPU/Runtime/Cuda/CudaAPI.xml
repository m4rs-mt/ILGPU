        <Parameter Name="module" Type="IntPtr" />
    </Import>
    <Import Name="cuModuleGetFunction"
            CharSet="Ansi"
            BestFitMapping="false"
            ThrowOnUnmappableChar="true">
        <Parameter Name="function" Type="IntPtr" Flags="Out" />
