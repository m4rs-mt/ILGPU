    <Operation Name="IsFinF" IsPredicate="true">
        <Summary>The is-finite operation.</Summary>
        <Flags>Floats</Flags>
        <Call>IntrinsicMath.CPUOnly.IsFinite</Call>
        <Implementation>!IsNaN({Value0}) &amp;&amp; !IsInfinity({Value0})</Implementation>
    </Operation>

