<?xml version="1.0" encoding="utf-8" ?>
<Capabilities>
    <Capability Name="Float16">
        <Summary>Supports Float16 (Half) data type.</Summary>
        <FeatureName>Float16 (Half) type</FeatureName>
        <OpenCL>
            <Extension>cl_khr_fp16</Extension>
        </OpenCL>
    </Capability>

    <Capability Name="Float16_Min">
        <Summary>Supports Float16 intrinsic Min.</Summary>
        <FeatureName>Intrinsic 'Min' for Float16</FeatureName>
        <Cuda minPTX="SM_75" />
    </Capability>
    <Capability Name="Float16_Max">
        <Summary>Supports Float16 intrinsic Max.</Summary>
        <FeatureName>Intrinsic 'Max' for Float16</FeatureName>
        <Cuda minPTX="SM_80" />
    </Capability>
    <Capability Name="Float16_TanH">
        <Summary>Supports Float16 intrinsic TanH.</Summary>
        <FeatureName>Intrinsic 'TanH' for Float16</FeatureName>
        <Cuda minPTX="SM_80" />
    </Capability>

    <Capability Name="Float32_TanH">
        <Summary>Supports Float32 intrinsic TanH.</Summary>
        <FeatureName>Intrinsic 'TanH' for Float32</FeatureName>
        <Cuda minPTX="SM_75" />
    </Capability>
    
    <Capability Name="Float64">
        <Summary>Supports Float64 (double) data type.</Summary>
        <FeatureName>Float64 (double) type</FeatureName>
        <OpenCL>
            <Extension>cl_khr_fp64</Extension>
        </OpenCL>
    </Capability>

    <Capability Name="GenericAddressSpace">
        <Summary>Supports generic address space.</Summary>
        <FeatureName>GenericAddressSpace feature</FeatureName>
        <OpenCL manual="true" />
    </Capability>

    <Capability Name="Int64_Atomics">
        <Summary>Supports 64-bit Atomics.</Summary>
        <FeatureName>64-bit atomics extension</FeatureName>
        <OpenCL>
            <Extension>cl_khr_int64_base_atomics</Extension>
            <Extension>cl_khr_int64_extended_atomics</Extension>
        </OpenCL>
    </Capability>

    <Capability Name="SubGroups">
        <Summary>Supports SubGroups.</Summary>
        <FeatureName>SubGroups extension</FeatureName>
        <OpenCL manual="true" />
    </Capability>
</Capabilities>
