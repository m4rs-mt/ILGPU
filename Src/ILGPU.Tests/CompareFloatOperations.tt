        [Theory]
<#          foreach (var range in floatRanges) { #>
<#              foreach (var range2 in floatRanges) { #>
        [InlineData(<#= range #>, <#= range2 #>)]
<#              } #>
<#          } #>
        [KernelMethod(nameof(<#= kernelName #>))]
        public void <#= testName #>(
            <#= typeName #> left,
            <#= typeName #> right)
