                                  // belongs to

<#
var operationConfigurations = new (string, string, string, string)[]
    {
        ("Add", "", "+", ""),
        ("Sub", "", "-", ""),
        ("Mul", "", "*", ""),
        ("Div", "", "/", ""),
        ("Rem", "", "%", ""),

        ("And", "", "&", ""),
        ( "Or", "", "|", ""),
        ("Xor", "", "^", ""),
        ("Shl", "", "<< (int)", ""),
        ("Shr", "", ">> (int)", ""),

        ("Min", "IntrinsicMath.Min(", ", ", ")"),
        ("Max", "IntrinsicMath.Max(", ", ", ")"),
    };
